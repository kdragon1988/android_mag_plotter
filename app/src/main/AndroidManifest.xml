<?xml version="1.0" encoding="utf-8"?>
<!--
    AndroidManifest.xml
    
    VISIONOID MAG PLOTTER - アプリケーションマニフェスト
    パーミッション、アクティビティ、サービスの宣言
-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- パーミッション -->
    <!-- 位置情報 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- ストレージ（スクリーンショット保存用） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- インターネット（地図タイルダウンロード用） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- フォアグラウンドサービス（バックグラウンド計測用） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- ハードウェア機能 -->
    <uses-feature android:name="android.hardware.sensor.compass" android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" android:required="true" />

    <application
        android:name=".MagPlotterApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisionoidMagPlotter"
        tools:targetApi="35">

        <!-- スプラッシュ画面 -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.VisionoidMagPlotter.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- メイン画面（ミッション一覧） -->
        <activity
            android:name=".ui.mission.MissionListActivity"
            android:exported="false"
            android:label="@string/title_mission_list" />

        <!-- ミッション作成/編集画面 -->
        <activity
            android:name=".ui.mission.MissionEditActivity"
            android:exported="false"
            android:label="@string/title_mission_create"
            android:windowSoftInputMode="adjustResize" />

        <!-- 計測画面 -->
        <activity
            android:name=".ui.measurement.MeasurementActivity"
            android:exported="false"
            android:label="@string/title_measurement"
            android:screenOrientation="portrait" />

        <!-- 設定画面 -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_settings" />

        <!-- オフライン地図管理画面 -->
        <activity
            android:name=".ui.offlinemap.OfflineMapActivity"
            android:exported="false"
            android:label="@string/title_offline_map" />

        <!-- 計測サービス -->
        <service
            android:name=".service.MeasurementService"
            android:foregroundServiceType="location"
            android:exported="false" />

    </application>

</manifest>


