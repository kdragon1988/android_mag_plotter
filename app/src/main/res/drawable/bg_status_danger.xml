<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_status_danger.xml
    
    危険ステータス背景（赤グロー）
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glow_red" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_panel" />
            <stroke
                android:width="1dp"
                android:color="@color/status_danger" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</layer-list>

