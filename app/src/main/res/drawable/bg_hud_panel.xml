<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_hud_panel.xml
    
    HUD風パネル背景
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- グラデーション背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="@color/background_secondary"
                android:startColor="@color/background_panel" />
            <corners android:radius="@dimen/panel_corner_radius" />
        </shape>
    </item>
    
    <!-- 左側のアクセントライン -->
    <item android:width="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_cyan" />
            <corners
                android:bottomLeftRadius="@dimen/panel_corner_radius"
                android:topLeftRadius="@dimen/panel_corner_radius" />
        </shape>
    </item>
</layer-list>

