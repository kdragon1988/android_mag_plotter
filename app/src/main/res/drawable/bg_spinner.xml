<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_spinner.xml
    
    VISIONOID MAG PLOTTER - スピナー背景
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_elevated" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="@color/accent_cyan" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_secondary" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_primary" />
        </shape>
    </item>
    
</selector>

