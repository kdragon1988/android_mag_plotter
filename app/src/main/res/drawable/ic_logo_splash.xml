<?xml version="1.0" encoding="utf-8"?>
<!--
    ic_logo_splash.xml
    
    スプラッシュ画面用ロゴ（磁場センサー風アイコン）
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外側のリング（グロー） -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="@color/glow_cyan" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 外側のリング -->
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/accent_cyan" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 中間のリング -->
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/accent_cyan" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 中央のドット -->
    <item
        android:bottom="45dp"
        android:left="45dp"
        android:right="45dp"
        android:top="45dp">
        <shape android:shape="oval">
            <solid android:color="@color/accent_cyan" />
        </shape>
    </item>
    
    <!-- 十字線（水平） -->
    <item
        android:bottom="58dp"
        android:left="10dp"
        android:right="10dp"
        android:top="58dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_cyan" />
        </shape>
    </item>
    
    <!-- 十字線（垂直） -->
    <item
        android:bottom="10dp"
        android:left="58dp"
        android:right="58dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_cyan" />
        </shape>
    </item>
</layer-list>



