<?xml version="1.0" encoding="utf-8"?>
<!--
    corner_decoration_top_left.xml
    
    コーナー装飾（左上）
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 水平線 -->
    <item
        android:bottom="38dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_cyan" />
            <size
                android:width="40dp"
                android:height="2dp" />
        </shape>
    </item>
    
    <!-- 垂直線 -->
    <item
        android:bottom="0dp"
        android:right="38dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_cyan" />
            <size
                android:width="2dp"
                android:height="40dp" />
        </shape>
    </item>
</layer-list>

