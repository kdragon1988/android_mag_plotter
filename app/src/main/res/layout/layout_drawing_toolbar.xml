<?xml version="1.0" encoding="utf-8"?>
<!--
    layout_drawing_toolbar.xml
    
    VISIONOID MAG PLOTTER - 作図ツールバーレイアウト
    
    作図モード時に表示されるツールバー。
    モード切り替え、完了、キャンセル、取り消しボタンを含む。
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_drawing_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_md"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- ヘッダー：モード表示とヒント -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_drawing_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="@string/drawing_mode_polygon"
                android:textColor="@color/accent_cyan"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_drawing_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawing_hint_polygon"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 計測値表示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal">

            <!-- 面積 -->
            <LinearLayout
                android:id="@+id/layout_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawing_area_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_area_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="0.0 m²"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 周囲長/距離 -->
            <LinearLayout
                android:id="@+id/layout_perimeter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_perimeter_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawing_perimeter_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_perimeter_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="0.0 m"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 半径（円用） -->
            <LinearLayout
                android:id="@+id/layout_radius"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/drawing_radius_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_radius_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="0.0 m"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 頂点数 -->
            <LinearLayout
                android:id="@+id/layout_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POINTS"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_points_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ボタン群 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- キャンセルボタン -->
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:background="@drawable/bg_button_outline"
                android:fontFamily="monospace"
                android:text="@string/drawing_cancel"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />

            <!-- 取り消しボタン -->
            <Button
                android:id="@+id/button_undo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:background="@drawable/bg_button_outline"
                android:fontFamily="monospace"
                android:text="@string/drawing_undo"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />

            <!-- 完了ボタン -->
            <Button
                android:id="@+id/button_complete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_primary"
                android:fontFamily="monospace"
                android:text="@string/drawing_complete"
                android:textColor="@color/background_primary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

